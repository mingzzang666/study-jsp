package com.app.ex;

import java.net.URLEncoder;

import jakarta.servlet.http.HttpServlet;

public class Ex05Result extends HttpServlet {
	String id= req.getParameter("id");
	String password = req.getParameter("password");
	String loginMessage  = "";
	boolean idCheck = false;
	boolean passwordCheck = false;
	
	if (id.equals("test")) {
		idCheck = true;
	}			
	if (password.equals("1234")) {
		passwordCheck = true;
	}
	
	if (idCheck && passwordCheck) {
		loginMessage = id + "님 환영합니다.";
		resp.sendRedirect(req.getContextPath() + "/ex05-result?loginMessage=" + URLEncoder.encode(loginMessage, "UTF-8"));
	} else {
		resp.sendRedirect(req.getContextPath() + "/ex05?error=" + URLEncoder.encode("로그인 실패. 다시 시도하세요.", "UTF-8"));
	}

}
