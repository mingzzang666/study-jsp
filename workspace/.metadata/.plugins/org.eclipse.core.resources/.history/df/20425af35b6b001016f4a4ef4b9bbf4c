<style>
   #name-message {
      color:black;
   }
   #name-message.active {
      color: red;
   }
</style>
</head>
<body>
   <form action="ex02" method="post" name="addForm">
      <input type="text" name="number" placeholder="정수 2개를 입력해주세요.">
      <p id="number-message"></p>
      <input type="button" value="전송">
   </form>
</body>
<script>
   const input =addForm.number;
   const button = document.querySelector("input[type=button]");
   const p = document.getElementById("number-message");
   
	   button.addEventListener("click", (e) => {
	      p.classList.toggle("active", !input.value);
	      p.innerText = input.value ? "" : "숫자를 입력해주세요.";
	      input.value && nameForm.submit(); 
	   });
</script>
