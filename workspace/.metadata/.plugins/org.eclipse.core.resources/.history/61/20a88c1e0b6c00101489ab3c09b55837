package com.app.ex;

import java.io.IOException;

import jakarta.servlet.ServletException;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;

public class Ex04Result extends HttpServlet {
	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
			String firstLevelDivision = req.getParameter("firstLevelDivision");
			String printAddress = "";
			if(req.getParameter("firstLevelDivision") == "서울") {
				printAddress = "강남구";				
			} else if(req.getParameter("firstLevelDivision") == "경기도") {
				printAddress = "다산의 고장 남양주시";
			} else {
				printAddress = "서울 혹은 경기도만 입력 가능합니다";
			}
			req.setAttribute("firstLevelDivision", firstLevelDivision);
			req.setAttribute("fruitPrice", fruitPrice);
			req.setAttribute("fruitInfo", fruitInfo);
			req.getRequestDispatcher("/ex03-result.jsp").forward(req, resp);
	}

}
